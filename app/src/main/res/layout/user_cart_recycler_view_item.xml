    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#423f55"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#AA696673"
            >
            <LinearLayout
                android:id="@+id/liner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_height="@dimen/_65sdp">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:src="@drawable/no_img"/>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/out_of_stock"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:background="@drawable/round_button"
                        android:padding="@dimen/_2sdp"
                        android:visibility="gone"
                        android:text="@string/out_of_stock"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/colorNewRed"
                        android:layout_alignParentBottom="true"
                        android:textAllCaps="true"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:textAllCaps="true"
                        android:text="BELLA CONTOUR HAZEL"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"/>
                    <TextView
                        android:id="@+id/right_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/left_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"/>


                    <LinearLayout
                        android:id="@+id/right_qty_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center|start"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/right_qty_text_tv"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/futuramediumbt"
                            android:text="@string/right_qty"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/right_dec_tv"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:text="-"
                            android:gravity="center"
                            android:background="@drawable/btn_rounded_add_to_cart"
                            android:textColor="@color/white"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textSize="@dimen/_15sdp"/>
                        <TextView
                            android:id="@+id/right_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/futuramediumbt"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:text="1"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/right_plus_tv"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:text="+"
                            android:gravity="center"
                            android:background="@drawable/btn_rounded_add_to_cart"
                            android:textColor="@color/white"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:textSize="@dimen/_15sdp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/left_qty_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/left_qty_text_tv"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/futuramediumbt"
                            android:text="Qty"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/left_dec_tv"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="center"
                            android:background="@drawable/btn_rounded_add_to_cart"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />

                        <TextView
                            android:id="@+id/left_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:fontFamily="@font/futuramediumbt"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/left_plus_tv"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:background="@drawable/btn_rounded_add_to_cart"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/text_power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/futuramediumbt"
                        android:text=""
                        android:visibility="invisible"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/dark_gry"
                android:layout_marginTop="@dimen/_5sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:gravity="center"
                android:paddingStart="@dimen/_5sdp">
                <LinearLayout
                    android:id="@+id/delete_layout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:tint="@color/white"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/delete"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textAllCaps="true"
                        android:text="@string/remove"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/move_to_layout"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:background="@color/white"
                        android:src="@drawable/heart_s"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textAllCaps="true"
                        android:text="@string/move_to_wishlist"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liner_layout"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="right"
            android:padding="@dimen/_7sdp"
            android:background="#423f55"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futuramediumbt"
                android:text="@string/totaldash"
                android:textAllCaps="true"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/cart_total_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futuramediumbt"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="00.00 KWD"
                android:paddingLeft="@dimen/_5sdp"
                android:textAllCaps="true"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
