<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingTop="@dimen/_5sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_230sdp"
            android:background="@drawable/border_black"
            android:padding="0dp">


            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:layout_marginBottom="3dp"
                android:scaleType="fitXY" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/black_gradient">

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/nameLinLayoutId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bottomLinlayoutId"
                    android:gravity="center"

                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/futuramediumbt"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textDirection="locale"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/offerPrice_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/futuramediumbt"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/offer_color"
                        android:textDirection="locale"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bottomLinlayoutId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/parent_black"
                    android:layout_marginBottom="3dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/black"
                        ></TextView>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/price_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="1.05"
                            android:fontFamily="@font/futuramediumbt"
                            android:text="0.0000 KWD"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="6.5dp"
                            android:paddingBottom="6.5dp"
                            android:textAllCaps="true"
                            android:textColor="#8bc6e9"
                            android:textSize="@dimen/_9sdp" />

                        <LinearLayout
                            android:id="@+id/buy_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.95"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:paddingRight="@dimen/_3sdp"
                            android:paddingLeft="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_new_add_to_cart" />

                            <TextView
                                android:id="@+id/instockTextViewId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/futuramediumbt"
                                android:text="@string/add_to_cart"
                                android:textAllCaps="false"
                                android:textColor="#8bc6e9"
                                android:textSize="@dimen/_8sdp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="@dimen/_7sdp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--  <TextView
                          android:id="@+id/material_name_text_view"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_margin="@dimen/_5sdp"
                          android:maxLines="1"
                          android:visibility="gone"
                          android:fontFamily="@font/futuramediumbt"
                          android:text="Material"
                          android:textSize="@dimen/_11sdp"
                          android:textColor="@color/black"/>
                          <LinearLayout
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginStart="@dimen/_5sdp"
                              android:layout_marginEnd="@dimen/_5sdp"
                              android:layout_marginBottom="@dimen/_5sdp"
                              android:visibility="visible">

                              <TextView
                                  android:id="@+id/price_text_view"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:fontFamily="@font/futuramediumbt"
                                  android:text="0.0000 KWD"
                                  android:textAllCaps="true"
                                  android:textColor="@color/white"
                                  android:textSize="@dimen/_12sdp"/>

                              <TextView
                                  android:id="@+id/sale_price_text_view"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="@dimen/_5sdp"
                                  android:fontFamily="@font/futuramediumbt"
                                  android:text="0.00 KWD"
                                  android:textAllCaps="true"
                                  android:textColor="@color/white"
                                  android:textSize="@dimen/_12sdp"
                                  android:visibility="gone" />


                          </LinearLayout>-->
                    <!--        <TextView
                                android:id="@+id/free_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/futuramediumbt"
                                android:layout_margin="@dimen/_5sdp"
                                android:text=""
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/red"/>-->

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_rounded_add_to_cart"
                        android:ellipsize="end"
                        android:fontFamily="@font/futuramediumbt"
                        android:minWidth="@dimen/_110sdp"
                        android:singleLine="true"
                        android:text="@string/buy_now"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:visibility="gone">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/btn_rounded_add_to_cart"
                        android:ellipsize="end"
                        android:fontFamily="@font/futuramediumbt"
                        android:minWidth="@dimen/_110sdp"
                        android:singleLine="true"
                        android:text="@string/buy_now"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <Button
                        android:id="@+id/view_detail_button"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/round_button"
                        android:ellipsize="end"
                        android:fontFamily="@font/futuramediumbt"
                        android:minWidth="@dimen/_110sdp"
                        android:singleLine="true"
                        android:text="@string/add_to_cart"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"
                        android:visibility="gone" />


                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_wishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_5sdp"
                android:padding="8dp"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/wish_list_image"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:tint="#FFF"
                    android:src="@drawable/heart_s" />

                <ImageView
                    android:id="@+id/wish_list_image1"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/heart_fill1"
                    android:visibility="gone" />

            </RelativeLayout>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/latest_text"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_130sdp"
        android:background="@drawable/button_border_layout"
        android:visibility="gone">

        <TextView
            android:id="@+id/tag_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/futuramediumbt"
            android:text="@string/latest"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
    </RelativeLayout>
</RelativeLayout>
